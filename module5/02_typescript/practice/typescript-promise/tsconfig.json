{
  "compilerOptions": {
    "module": "es2015",
    "target": "es2015",
    "lib": [
      "es2016",
      "dom"
    ],
    "declaration": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "outDir": "dist",
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "removeComments": true
  },
  "exclude": ["node_modules", "dist"]
}